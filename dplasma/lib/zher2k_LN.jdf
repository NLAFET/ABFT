#include "dplasma/lib/dplasmajdf.h"
#include "parsec/data_dist/matrix/matrix.h"
#include "dplasma/lib/flops.h"
#include "dplasma/lib/floputils.h"

%}

uplo      [type = "PLASMA_enum"]
trans     [type = "PLASMA_enum"]
alpha     [type = "parsec_complex64_t"]
descA     [type = "const parsec_tiled_matrix_dc_t*"]
descB     [type = "const parsec_tiled_matrix_dc_t*"]
beta      [type = "double"]
descC     [type = "parsec_tiled_matrix_dc_t*"]


zher2k(n, k) [flops = inline_c %{ return FLOPS_ZHER2K(CLEAN_NB(descC, n), CLEAN_NB(descA, k)); %}]
  /* Execution Space */
  n = 0 .. descC->nt-1
  k = 0 .. descA->nt-1

  /* Locality */
  : descC(n,n)

  READ  A    <- A in_data_A(n, k)
  READ  B    <- B in_data_B(n, k)
  RW    C    <- (k == 0) ? descC(n,n)
             <- (k >  0) ? C zher2k(n, k-1)
             -> (k <  (descA->nt-1)) ? C zher2k(n, k+1)
             -> (k == (descA->nt-1)) ? descC(n,n)

BODY
{
    int tempnn = (n == (descC->nt-1)) ? (descC->n - n * descC->nb) : descC->nb;
    int tempkn = (k == (descA->nt-1)) ? (descA->n - k * descA->nb) : descA->nb;
    int ldan = BLKLDD( descA, n );
    int ldbn = BLKLDD( descB, n );
    int ldcn = BLKLDD( descC, n );
    double dbeta = (k == 0) ? beta : (double)1.;

    printlog("CORE_zher2k(%d, %d)\n"
             "\t(uplo, trans, tempnn, tempkn, alpha, A(%d,%d)[%p], ldan, B(%d,%d)[%p], ldbn, dbeta, C(%d,%d)[%p], ldcn)\n",
             n, k, n, k, A, n, k, B, n, n, C);
#if !defined(PARSEC_DRY_RUN)
    CORE_zher2k(uplo, trans, tempnn, tempkn,
                alpha, A /* descA(n,k) */, ldan,
                       B /* descB(n,k) */, ldbn,
                dbeta, C /* descC(n,n) */, ldcn );
#endif /* !defined(PARSEC_DRY_RUN) */
}
END

zgemm_AB(m, n, k) [flops = inline_c%{ return FLOPS_ZGEMM(CLEAN_MB(descC, m), CLEAN_NB(descC, n), CLEAN_NB(descA, k)); %}]
  /* Execution Space */
  m = 1   .. descC->mt-1
  n = 0   .. m-1
  k = 0   .. descA->nt-1

  /* Locality */
  : descC(m,n)

  READ  A    <- A in_data_A(m, k)
  READ  B    <- B in_data_B(n, k)
  RW    C    <- (k == 0) ? descC(m, n)
             <- (k >  0) ? C zgemm_BA(m, n, k-1)
             -> C zgemm_BA(m, n, k)

BODY
{
    int tempmm = (m == (descC->mt-1)) ? (descC->m - m * descC->mb) : descC->mb;
    int tempnn = (n == (descC->nt-1)) ? (descC->n - n * descC->nb) : descC->nb;
    int tempkn = (k == (descA->nt-1)) ? (descA->n - k * descA->nb) : descA->nb;
    int ldam = BLKLDD( descA, m );
    int ldbn = BLKLDD( descB, n );
    int ldcm = BLKLDD( descC, m );
    parsec_complex64_t zbeta = (k == 0) ? ((parsec_complex64_t)beta) : (parsec_complex64_t)1.;

    printlog("CORE_zgemm_AB(%d, %d, %d)\n"
             "\t(PlasmaNoTrans, PlasmaConjTrans, m=%d, n=%d, k=%d, alpha=(%e,%e), A(%d,%d)[%p], lda=%d, B(%d,%d)[%p], ldb=%d, beta=(%e,%e), C(%d,%d)[%p], ldc=%d)\n",
             m, n, k, tempmm, tempnn, tempkn,
             creal(alpha), cimag(alpha), m, k, A, ldam, n, k, B, ldbn,
             creal(zbeta), cimag(zbeta), m, n, C, ldcm);
#if !defined(PARSEC_DRY_RUN)
    CORE_zgemm(PlasmaNoTrans, PlasmaConjTrans,
               tempmm, tempnn, tempkn,
               alpha, A /* descA(m,k) */, ldam,
                      B /* descB(n,k) */, ldbn,
               zbeta, C /* descC(m,n) */, ldcm );
#endif /* !defined(PARSEC_DRY_RUN) */
}
END

zgemm_BA(m, n, k) [flops = inline_c%{ return FLOPS_ZGEMM(CLEAN_MB(descC, m), CLEAN_NB(descC, n), CLEAN_NB(descA, k)); %}]
  /* Execution Space */
  m = 1   .. descC->mt-1
  n = 0   .. m-1
  k = 0   .. (descA->nt-1)

  /* Locality */
  : descC(m,n)

  READ  A    <- B in_data_B(m, k)
  READ  B    <- A in_data_A(n, k)
  RW    C    <- C zgemm_AB(m, n, k)
             -> (k <  (descA->nt-1)) ? C zgemm_AB(m, n, k+1)
             -> (k == (descA->nt-1)) ? descC(m, n)

BODY
{
    int tempmm = (m == (descC->mt-1)) ? (descC->m - m * descC->mb) : descC->mb;
    int tempnn = (n == (descC->nt-1)) ? (descC->n - n * descC->nb) : descC->nb;
    int tempkn = (k == (descA->nt-1)) ? (descA->n - k * descA->nb) : descA->nb;
    int ldan = BLKLDD( descA, n );
    int ldbm = BLKLDD( descB, m );
    int ldcm = BLKLDD( descC, m );

    printlog("CORE_zgemm_BA(%d, %d, %d)\n"
             "\t(PlasmaNoTrans, PlasmaConjTrans, m=%d, n=%d, k=%d, alpha=(%e,%e), B(%d,%d)[%p], ldb=%d, A(%d,%d)[%p], lda=%d, beta=(%e,%e), C(%d,%d)[%p], ldc=%d)\n",
             m, n, k, tempmm, tempnn, tempkn,
             creal(alpha), cimag(alpha), m, k, A, ldbm, n, k, B, ldan,
             creal(1.),    cimag(1.),    m, n, C, ldcm);

#if !defined(PARSEC_DRY_RUN)
    CORE_zgemm(PlasmaNoTrans, PlasmaConjTrans,
               tempmm, tempnn, tempkn,
               conj(alpha), A /* descB(m,k) */, ldbm,
                            B /* descA(n,k) */, ldan,
               1.,          C /* descC(m,n) */, ldcm );
#endif /* !defined(PARSEC_DRY_RUN) */
}
END

in_data_A(m, n) [profile = off]
  /* Execution Space */
  m = 0 .. (descA->mt-1)
  n = 0 .. (descA->nt-1)

  /* Locality */
  : descA(m,n)

  READ  A    <- descA(m,n)
             -> A zher2k(m, n)
             -> A zgemm_AB(m, 0 .. m-1, n)
             -> B zgemm_BA(m+1 .. descC->mt-1, m, n)

BODY
{
    /* nothing */
}
END

in_data_B(m, n) [profile = off]
  /* Execution Space */
  m = 0 .. (descB->mt-1)
  n = 0 .. (descB->nt-1)

  /* Locality */
  : descB(m,n)

  READ  B    <- descB(m,n)
             -> B zher2k(m, n)
             -> B zgemm_AB(m+1 .. descC->mt-1, m, n)
             -> A zgemm_BA(m, 0 .. m-1, n)

BODY
{
    /* nothing */
}
END
