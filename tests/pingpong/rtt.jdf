extern "C" %{
   /* This simple example does not need to include anything */
%}

NT
WS

PING(k)

k = 0 .. NT-1
: A(k % WS)

RW T <- (k ==0) ? A(k % WS) : T PING(k-1)
     -> (k< NT) ? T PING(k+1)
     -> A(k % WS)

; 0

